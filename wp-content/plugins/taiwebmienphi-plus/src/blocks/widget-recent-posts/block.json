{
  "$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/block.json",
  "apiVersion": 2,
  "name": "taiwebmienphi-plus/widget-recent-posts",
  "title": "[Widget] - Recent Posts",
  "category": "twmp-plus-category",
  "textdomain": "taiwebmienphi-plus",
  "attributes": {
    "showDescription": {
      "type": "boolean",
      "default": true
    },
    "showDate": {
      "type": "boolean",
      "default": true
    },
    "showAuthor": {
      "type": "boolean",
      "default": true
    },
    "showCategory": {
      "type": "boolean",
      "default": true
    },
    "showViewMore": {
      "type": "boolean",
      "default": true
    },
    "selectedPostIds": {
      "type": "array",
      "default": [],
      "items": {
        "type": "number"
      }
    },
    "postsPerPage": {
      "type": "number",
      "default": 5
    },
    "titleLimit": {
      "type": "number",
      "default": 20
    },
    "excerptLimit": {
      "type": "number",
      "default": 40
    },
    "textViewMore": {
      "type": "string",
      "default": "View More"
    }
  },
  "editorScript": "file:./index.js"
}